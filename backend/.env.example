# Server Configuration
PORT=3000
NODE_ENV=development
HOST=localhost
API_PREFIX=/api/v1

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/knowledge_base

# JWT Configuration
JWT_SECRET=your-secret-key
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
JWT_ALGORITHM=HS256

# Milvus Configuration
MILVUS_ADDRESS=localhost:19530
MILVUS_USERNAME=
MILVUS_PASSWORD=
MILVUS_SSL=false
MILVUS_COLLECTION=knowledge_vectors
MILVUS_DIMENSION=768

# BERT Service Configuration
BERT_ENDPOINT=http://localhost:8000/encode
BERT_BATCH_SIZE=32
BERT_MAX_LENGTH=512

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=jubensha:
REDIS_CACHE_TTL=3600
REDIS_CACHE_MAX_ITEMS=1000
RATE_LIMIT_POINTS=100
RATE_LIMIT_DURATION=3600

# Elasticsearch Configuration
ELASTICSEARCH_NODE=http://localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# Logging Configuration
LOG_LEVEL=info
LOG_FILENAME=app.log
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d
LOG_DIR=logs

# OpenAI 配置
OPENAI_API_KEY=your_openai_api_key

# 文件上传配置
UPLOAD_DIR=uploads
UPLOAD_MAX_SIZE=5242880 # 5MB
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif

# 日志配置
LOG_FORMAT=dev

# 缓存配置
CACHE_TTL=3600

# 跨域配置
CORS_ORIGIN=*
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE 